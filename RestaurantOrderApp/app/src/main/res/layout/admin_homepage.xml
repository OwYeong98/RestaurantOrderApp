<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_employeehomepage"
    android:id="@+id/customer_mainscreen"
    tools:context="com.oymj.restaurantorderapp.customerfragment.customerhomepage"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@drawable/ordertopbackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">

        <TextView
            android:id="@+id/admin_toppagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit page"
            android:fontFamily="serif"
            android:textSize="50px"
            android:textColor="#35637c"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/admin_toptitle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/admin_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="serif"
            android:text="ADMIN"
            android:textColor="#467fa5"
            android:textSize="90px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />


    </android.support.constraint.ConstraintLayout>


    <Spinner
        android:id="@+id/userspinner"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="#00000000"
        android:layout_marginEnd="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/welcomeuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome here,"
        android:textSize="50px"
        android:textColor="#d7ffff"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/showusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="80px"
        android:textColor="#86fcf6"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeuser" />

    <ImageButton
        android:id="@+id/checkreportbutton"
        android:layout_width="904px"
        android:layout_height="277px"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/button_checkreport"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/editfoodmenubutton"
        app:layout_constraintHorizontal_bias="0.511" />

    <ImageButton
        android:id="@+id/viewfeedbackbutton"
        android:layout_width="904px"
        android:layout_height="277px"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/button_viewfeedback"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/checkreportbutton"
        app:layout_constraintHorizontal_bias="0.511" />

    <ImageButton
        android:id="@+id/editfoodmenubutton"
        android:layout_width="904px"
        android:layout_height="277px"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/button_editfoodmenu"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/userspinner" />


</android.support.constraint.ConstraintLayout>
