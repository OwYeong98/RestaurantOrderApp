<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_employeehomepage"
        tools:context="com.oymj.restaurantorderapp.LoginScreen"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:background="@drawable/ordertopbackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/constraintLayout">

            <TextView
                android:id="@+id/admin_toppagetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Food Menu"
                android:fontFamily="serif"
                android:textSize="50px"
                android:textColor="#35637c"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/admin_toptitle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/admin_toptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="serif"
                android:text="ADMIN"
                android:textColor="#467fa5"
                android:textSize="90px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />




        </android.support.constraint.ConstraintLayout>




        <EditText
            android:id="@+id/addfoodchefsuggest"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_textbox"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodpreparetime"
            app:layout_constraintLeft_toLeftOf="@+id/addfoodpreparetime" />

        <EditText
            android:id="@+id/addfoodsour"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_textbox"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodsweetness"
            app:layout_constraintLeft_toLeftOf="@+id/addfoodsweetness" />

        <EditText
            android:id="@+id/addfoodsweetness"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_textbox"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodsalty"
            app:layout_constraintLeft_toLeftOf="@+id/addfoodsalty" />

        <EditText
            android:id="@+id/addfoodsalty"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_textbox"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodspicy"
            app:layout_constraintLeft_toLeftOf="@+id/addfoodspicy" />

        <EditText
            android:id="@+id/addfoodcontainmeat"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_textbox"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodprice"
            app:layout_constraintLeft_toLeftOf="@+id/addfoodprice" />

        <EditText
            android:id="@+id/addfoodspicy"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_textbox"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodcontainmeat"
            app:layout_constraintLeft_toLeftOf="@+id/addfoodcontainmeat" />

        <EditText
            android:id="@+id/addfoodprice"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_textbox"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/addfooddesc"
            app:layout_constraintLeft_toLeftOf="@+id/addfooddesc" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Contain meat:"
            app:layout_constraintRight_toLeftOf="@+id/addfoodcontainmeat"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/addfoodcontainmeat"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="Food desc:"
            android:textColor="#ffffff"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/addfooddesc"
            android:layout_marginTop="0dp"
            app:layout_constraintRight_toLeftOf="@+id/addfooddesc"
            android:layout_marginRight="0dp" />



        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Sweetness:"
            android:textSize="12sp"
            android:textColor="#ffffff"
            app:layout_constraintRight_toLeftOf="@+id/addfoodsweetness"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toTopOf="@+id/addfoodsweetness"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prepare time(min):"
            android:textSize="12sp"
            android:textColor="#ffffff"
            app:layout_constraintRight_toLeftOf="@+id/addfoodpreparetime"
            app:layout_constraintTop_toTopOf="@+id/addfoodpreparetime" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Chef suggest:"
            android:textColor="#ffffff"
            app:layout_constraintRight_toLeftOf="@+id/addfoodchefsuggest"
            android:layout_marginRight="11dp"
            app:layout_constraintTop_toTopOf="@+id/addfoodchefsuggest"
            android:layout_marginEnd="11dp" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Sour:"
            android:textColor="#ffffff"
            app:layout_constraintRight_toLeftOf="@+id/addfoodsour"
            android:layout_marginRight="21dp"
            app:layout_constraintTop_toTopOf="@+id/addfoodsour"
            android:layout_marginEnd="21dp" />


        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Price:RM"
            android:textColor="#ffffff"
            app:layout_constraintRight_toLeftOf="@+id/addfoodprice"
            android:layout_marginRight="13dp"
            app:layout_constraintTop_toTopOf="@+id/addfoodprice"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="13dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Spicy:"
            android:textColor="#ffffff"
            app:layout_constraintRight_toLeftOf="@+id/addfoodspicy"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@+id/addfoodspicy"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Salty:"
            android:textColor="#ffffff"
            app:layout_constraintRight_toLeftOf="@+id/addfoodsalty"
            android:layout_marginRight="19dp"
            app:layout_constraintTop_toTopOf="@+id/addfoodsalty"
            android:layout_marginEnd="19dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name:"
            android:textColor="#ffffff"
            app:layout_constraintRight_toLeftOf="@+id/addfoodfoodname"
            android:layout_marginRight="11dp"
            app:layout_constraintTop_toTopOf="@+id/addfoodfoodname"
            android:layout_marginTop="0dp" />
          " />
        <EditText
            android:id="@+id/addfoodfoodname"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:ems="10"
            android:gravity="top"
            android:textSize="15sp"
            android:background="@drawable/round_corner_textbox"
            android:inputType="text"

            android:paddingLeft="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/addfooddesc"
            android:layout_width="241dp"
            android:layout_height="70dp"
            android:paddingTop="10px"
            android:ems="10"
            android:gravity="top"
            android:textSize="15sp"
            android:background="@drawable/round_corner_textbox"
            android:inputType="textMultiLine"

            android:paddingLeft="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodfoodname"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/addfoodpreparetime"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="20dp"
            android:background="@drawable/round_corner_textbox"
            android:inputType="number"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodsour"
            app:layout_constraintLeft_toLeftOf="@+id/addfoodsour" />

        <ImageButton
            android:id="@+id/addfoodconfirmadd"
            android:layout_width="98dp"
            android:layout_height="46dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_confirmaddmenu"
            app:layout_constraintLeft_toRightOf="@+id/addfoodchefsuggest"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="169dp"
            app:layout_constraintTop_toBottomOf="@+id/addfooddesc"
            android:layout_marginStart="70dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
