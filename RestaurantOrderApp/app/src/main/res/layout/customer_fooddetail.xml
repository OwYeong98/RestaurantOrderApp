<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >

        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_customerhomepage"
            tools:context="com.oymj.restaurantorderapp.customerfragment.customerfooddetail"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="0dp">

            <FrameLayout
                android:layout_width="322dp"
                android:layout_height="243dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/frameLayout"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/foodimage"
                    android:layout_width="match_parent"
                    android:layout_height="729px"
                    app:srcCompat="@drawable/biggrilledlambchop"


                    tools:layout_editor_absoluteX="22dp"
                    tools:layout_editor_absoluteY="28dp" />

                <TextView
                    android:id="@+id/foodtitle"
                    android:layout_gravity="bottom"
                    android:textAlignment="center"
                    android:layout_marginBottom="50px"
                    android:textSize="80px"
                    android:textColor="#bbe7f9"
                    android:shadowColor="#000000"
                    android:shadowRadius="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />


            </FrameLayout>


            <TextView
                android:id="@+id/fooddescription"
                android:layout_width="815px"
                android:layout_height="200px"
                android:textAlignment="center"
                android:text="TextView"
                android:textColor="#d9fcf9"
                android:textSize="40px"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="308dp"
                android:layout_height="2px"
                android:background="#ffffff"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/fooddescription"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/view2" />

            <TextView
                android:id="@+id/chefrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ChefRate"
                android:textSize="60px"
                android:textColor="#ffffff"
                android:layout_marginLeft="33dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="60px"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TableLayout
                android:layout_width="630px"
                android:layout_height="130px"
                android:layout_marginTop="20px"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                android:layout_marginRight="26dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tableLayout2">

                <TableRow
                    android:id="@+id/chefrow"
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:background="#00000000">


                </TableRow>

            </TableLayout>

            <View
                android:layout_width="308dp"
                android:layout_height="2px"
                android:background="#ffffff"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/view3"
                android:layout_marginTop="50px"
                app:layout_constraintTop_toBottomOf="@+id/chefrate" />

            <TableLayout
                android:layout_width="580px"
                android:layout_height="780px"
                android:id="@+id/tableLayout"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.135"
                android:layout_marginTop="20px"
                app:layout_constraintTop_toBottomOf="@+id/view3">

                <TableRow
                    android:id="@+id/spicyrow"
                    android:layout_width="match_parent"
                    android:layout_height="75px"
                    android:background="#00000000">

                    <TextView
                        android:id="@+id/spicy"
                        android:background="#00000000"
                        android:gravity="left"
                        android:padding="5dp"
                        android:width="240px"
                        android:height="75px"
                        android:text="Spicy rate"
                        android:textColor="#ffffff"
                        android:textSize="35px" />

                </TableRow>

                <TableRow
                    android:id="@+id/saltyrow"
                    android:layout_width="match_parent"
                    android:layout_height="75px"
                    android:background="#00000000">

                    <TextView
                        android:id="@+id/salty"
                        android:text="Salty rate"
                        android:padding="5dp"
                        android:width="240px"
                        android:height="75px"
                        android:textSize="35px"
                        android:textColor="#ffffff"
                        android:background="#00000000"
                        tools:layout_editor_absoluteX="3dp"
                        tools:layout_editor_absoluteY="214dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/sweetrow"
                    android:layout_width="match_parent"
                    android:layout_height="75px"
                    android:background="#00000000">


                    <TextView
                        android:id="@+id/sweet"
                        android:text="Sweet rate"
                        android:padding="5dp"
                        android:width="240px"
                        android:height="75px"
                        android:textSize="35px"
                        android:textColor="#ffffff"
                        android:background="#00000000"
                        tools:layout_editor_absoluteX="3dp"
                        tools:layout_editor_absoluteY="214dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/sourrow"
                    android:layout_width="match_parent"
                    android:layout_height="75px"
                    android:background="#00000000">


                    <TextView
                        android:id="@+id/sour"
                        android:text="Sour rate"
                        android:padding="5dp"
                        android:width="240px"
                        android:height="75px"
                        android:textSize="35px"
                        android:textColor="#ffffff"
                        android:background="#00000000"
                        tools:layout_editor_absoluteX="3dp"
                        tools:layout_editor_absoluteY="214dp" />

                </TableRow>


                <TableRow
                    android:id="@+id/vegetarianrow"
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:layout_marginTop="60px"
                    android:background="#00000000">

                    <TextView
                        android:id="@+id/meatorvegetarian"
                        android:padding="5dp"
                        android:width="240px"
                        android:height="75px"
                        android:textSize="40px"
                        android:text="Food Type"
                        android:textColor="#ffffff"
                        android:background="#00000000"
                        tools:layout_editor_absoluteX="3dp"
                        tools:layout_editor_absoluteY="214dp" />

                </TableRow>

            </TableLayout>



            <ImageButton
                android:id="@+id/ordernow"
                android:layout_width="293px"
                android:layout_height="138px"
                android:scaleType="fitXY"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_addtoorder"
                android:layout_marginStart="55px"
                android:layout_marginTop="110px"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                app:layout_constraintLeft_toRightOf="@+id/tableLayout"
                android:layout_marginLeft="8dp" />



        </android.support.constraint.ConstraintLayout>

</ScrollView>




