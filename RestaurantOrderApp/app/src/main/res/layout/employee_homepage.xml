<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_employeehomepage"
    android:id="@+id/employee_mainscreen"
    tools:context="com.oymj.restaurantorderapp.employeefragment.employeehomepage"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="289px"
        android:background="@drawable/ordertopbackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">

        <TextView
            android:id="@+id/employee_topeditpagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Page"
            android:fontFamily="serif"
            android:textSize="50px"
            android:textColor="#35637c"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/employee_toptitle" />
        <TextView
            android:id="@+id/employee_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="serif"
            android:text="EMPLOYEE"
            android:textColor="#467fa5"
            android:textSize="90px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

    </android.support.constraint.ConstraintLayout>


    <Spinner
        android:id="@+id/userspinner"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="#00000000"
        android:layout_marginEnd="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
    <TextView
        android:id="@+id/welcomeuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome here,"
        android:textSize="50px"
        android:textColor="#d7ffff"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/showusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="80px"
        android:textColor="#86fcf6"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeuser" />

    <ImageButton
        android:id="@+id/orderlistbutton"
        android:layout_width="731px"
        android:layout_height="249px"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/button_currentorderlist"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <ImageButton
        android:id="@+id/paymentrequestbutton"
        android:layout_width="731px"
        android:layout_height="249px"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/button_paymentrequest"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/orderlistbutton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/setfoodavailabilitybutton"
        android:layout_width="731px"
        android:layout_height="249px"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/button_foodavailability"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/paymentrequestbutton" />

    <ImageButton
        android:id="@+id/ordernotpaidlistbutton"
        android:layout_width="731px"
        android:layout_height="249px"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/button_ordernotpaidlist"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/setfoodavailabilitybutton" />

</android.support.constraint.ConstraintLayout>
