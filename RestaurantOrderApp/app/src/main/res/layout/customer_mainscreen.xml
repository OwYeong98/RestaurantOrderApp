<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oymj.restaurantorderapp.customerfragment.customermainscreen">


    <FrameLayout
        android:id="@+id/customermain_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:animateLayoutChanges="true">

    </FrameLayout>

    <RelativeLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:background="@drawable/btmnav_background"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view">



    </RelativeLayout>

    <ImageButton
        android:id="@+id/bottomnav_homepage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/btmnav_homepage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/bottomnav_foodmenu"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/btmnav_foodmenu" />

    <ImageButton
        android:id="@+id/bottomnav_myorder"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/btmnav_myorder"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>