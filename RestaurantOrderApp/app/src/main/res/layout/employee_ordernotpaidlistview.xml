<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/ordernotpaidusername"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:textColor="#d2f3f9"
        android:text="John Doe"
        android:textSize="40px"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ordernotpaiduseric"
        android:layout_toEndOf="@+id/ordernotpaiduseric"
        android:layout_marginStart="12dp" />


    <TextView
        android:id="@+id/ordernotpaiddate"
        android:layout_width="240px"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="#d2f3f9"
        android:text="2017/10/23 12:00.00"
        android:textSize="35px"
        android:layout_marginLeft="20px"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ordernotpaidusername" />

    <TextView
        android:id="@+id/ordernotpaidtotalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d2f3f9"
        android:layout_toRightOf="@id/ordernotpaiddate"
        android:layout_marginLeft="50px"
        android:layout_centerVertical="true"
        android:text="RM2000.20"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/ordernotpaiduseric"
        android:layout_width="146px"
        android:layout_height="146px"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55px"
        app:srcCompat="@drawable/ic_user" />



</RelativeLayout>