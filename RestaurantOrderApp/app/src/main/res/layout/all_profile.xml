<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_employeehomepage"
    android:id="@+id/employee_mainscreen"
    tools:context="com.oymj.restaurantorderapp.allprofile"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/profilegenderedit"
        android:paddingTop="20px"
        android:layout_width="630px"
        android:layout_height="106px"
        android:background="@drawable/quantityedittextbackground"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/genderprofile"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/profileageedit" />

    <EditText
        android:id="@+id/profileconfirmpasswordedit"
        android:paddingTop="20px"
        android:layout_width="630px"
        android:layout_height="106px"
        android:background="@drawable/quantityedittextbackground"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/confirmpasswordprofile"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/profilepasswordedit" />

    <TextView
        android:id="@+id/genderprofile"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="Gender : "
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ageprofile"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/confirmpasswordprofile"
        android:layout_width="420px"
        android:layout_height="wrap_content"
        android:text="Confirm Password: "
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="46px"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordprofile"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/profilepasswordedit"
        android:paddingTop="20px"
        android:layout_width="630px"
        android:layout_height="106px"
        android:background="@drawable/quantityedittextbackground"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/passwordprofile"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/profilenameedit" />

    <EditText
        android:id="@+id/profilenameedit"
        android:paddingTop="20px"
        android:layout_width="630px"
        android:layout_height="106px"
        android:background="@drawable/quantityedittextbackground"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/passwordprofile"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/view10" />

    <TextView
        android:id="@+id/passwordprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="Password: "
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nameprofile" />

    <TextView
        android:id="@+id/nameprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="Name: "
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/view10"
        android:layout_marginLeft="89dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="289px"
        android:background="@drawable/ordertopbackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">

        <TextView
            android:id="@+id/employee_topeditpagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="serif"
            android:textSize="50px"
            android:textColor="#35637c"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/employee_toptitle" />
        <TextView
            android:id="@+id/employee_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="serif"
            android:text="EMPLOYEE"
            android:textColor="#467fa5"
            android:textSize="90px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="146px"
        android:layout_height="146px"
        app:srcCompat="@drawable/ic_user"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="60px"
        android:text="Your Profile"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <View
        android:layout_width="315dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:id="@+id/view10"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.517" />

    <TextView
        android:id="@+id/ageprofile"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmpasswordprofile"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/profileageedit"
        android:paddingTop="20px"
        android:layout_width="630px"
        android:layout_height="106px"
        android:background="@drawable/quantityedittextbackground"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/ageprofile"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/profileconfirmpasswordedit" />

    <ImageButton
        android:id="@+id/confirmchangebutton"
        android:layout_width="293px"
        android:layout_height="138px"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_confirmchange"
        android:layout_marginRight="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/profilegenderedit" />

    <ImageButton
        android:id="@+id/abortchangebutton"
        android:layout_width="293px"
        android:layout_height="138px"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_abortchange"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/profilegenderedit"
        android:layout_marginLeft="77dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>