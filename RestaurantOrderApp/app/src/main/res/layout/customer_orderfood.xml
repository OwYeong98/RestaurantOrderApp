<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.oymj.restaurantorderapp.customerfragment.orderfood"
        android:background="@drawable/background_customerhomepage">

        <FrameLayout
            android:layout_width="322dp"
            android:layout_height="243dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/frameLayout"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/foodimgorderfood"
                android:layout_width="966px"
                android:layout_height="729px"
                app:srcCompat="@drawable/biggrilledlambchop"

                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="28dp" />

            <TextView
                android:id="@+id/foodtitleorderfood"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:layout_marginBottom="50px"
                android:textSize="80px"
                android:textColor="#bbe7f9"
                android:shadowColor="#000000"
                android:shadowRadius="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />


        </FrameLayout>
        <TextView
            android:id="@+id/orderfoodpricetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textColor="#ffffff"
            android:textSize="70px"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

        <TextView
            android:id="@+id/orderfoodtotalprice"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Total Price: RM0"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/remark"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/Orderprice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RM 50 each"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="40px"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/orderfoodpricetitle"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <View
            android:layout_width="308dp"
            android:layout_height="2px"
            android:background="#ffffff"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/view4"
            android:layout_marginTop="35px"
            app:layout_constraintTop_toBottomOf="@+id/Orderprice" />






        <TextView
            android:id="@+id/orderfoodquantity"
            android:layout_width="94dp"
            android:layout_height="31dp"
            android:fontFamily="casual"
            android:text="Quantity:"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintRight_toLeftOf="@+id/quantity"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.235"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/Orderprice" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="260dp"
            android:layout_height="54dp"
            android:scaleType="fitXY"
            android:paddingTop="18dp"
            android:paddingLeft="20dp"
            android:ems="10"
            android:background="@drawable/quantityedittextbackground"
            android:inputType="number"
            android:layout_marginRight="-6dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Orderprice" />

        <EditText
            android:id="@+id/remark"
            android:layout_width="261dp"
            android:layout_height="90dp"
            android:ems="10"
            android:background="@drawable/remarkedittextbackground"
            android:inputType="textMultiLine"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/quantity"
            android:layout_marginRight="1dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/orderfoodremark"
            android:layout_width="94dp"
            android:layout_height="31dp"
            android:fontFamily="casual"
            android:text="Remark: "
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/orderfoodquantity"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageButton
            android:id="@+id/orderfood"
            android:layout_width="293px"
            android:layout_height="138px"
            android:scaleType="fitXY"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_addtoorder"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/remark"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order this food"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:fontFamily="casual"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-11dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.503" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>