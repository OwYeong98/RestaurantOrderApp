<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:descendantFocusability="blocksDescendants">

    <View
        android:layout_width="315dp"
        android:layout_height="2px"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/feedbacklistviewdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="30px"
        android:text="2017/12/12 12:12:12"
        android:layout_marginLeft="60px" />

    <TextView
        android:id="@+id/feedbacklistviewusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="John Doe"
        android:textSize="60px"
        android:layout_toRightOf="@+id/feedbackusericon"
        android:layout_marginTop="160px"
        android:layout_marginLeft="35px" />
    <TextView
        android:id="@+id/feedbacklistviewcommenttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d2f3f9"
        android:text="Feedback:"
        android:textSize="40px"
        android:layout_toRightOf="@+id/feedbackusericon"
        android:layout_marginTop="230px"
        android:layout_marginLeft="35px" />
    <TextView
        android:id="@+id/feedbacklistviewcomment"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:textColor="#d2f3f9"
        android:text="very good services :D I liked it"
        android:textSize="30px"
        android:layout_toRightOf="@+id/feedbackusericon"
        android:layout_marginTop="280px"
        android:layout_marginLeft="35px" />



    <ImageView
        android:id="@+id/feedbackusericon"
        android:layout_width="260px"
        android:layout_height="260px"
        android:layout_marginTop="80px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60px"
        app:srcCompat="@drawable/ic_user" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="500px"
        android:layout_height="65px"
        android:layout_marginTop="80px"
        android:layout_toRightOf="@id/feedbackusericon"
        android:layout_marginLeft="35px">

        <TableRow
            android:id="@+id/feedbacklistviewstarrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

            <ImageView
                android:id="@+id/feedbacklistviewstar1"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/feedbacklistviewstar2"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/feedbacklistviewstar3"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/feedbacklistviewstar4"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/feedbacklistviewstar5"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_star" />


        </TableRow>

    </TableLayout>

</RelativeLayout>