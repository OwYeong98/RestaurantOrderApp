<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_employeehomepage"
    tools:context="com.oymj.restaurantorderapp.employeefragment.employeeorderinqueue"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tablenoword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Table"
        android:textSize="70px"
        android:layout_marginLeft="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/view8" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@drawable/ordertopbackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">

        <TextView
            android:id="@+id/employee_toppagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Order List"
            android:fontFamily="serif"
            android:textSize="50px"
            android:textColor="#35637c"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/employee_toptitle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/employee_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="serif"
            android:text="EMPLOYEE"
            android:textColor="#467fa5"
            android:textSize="90px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />



    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/ic_order"
        android:layout_marginLeft="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/currentorderinqueueword"
        android:layout_width="680px"
        android:layout_height="wrap_content"
        android:text="Current Order in Queue"
        android:textSize="60px"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="315dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/currentorderinqueueword"
        android:id="@+id/view8" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="354dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="130dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8">

        <ListView
            android:id="@+id/orderinqueuelistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/statusword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Status"
        android:textSize="70px"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/view8"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
