<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreenbackground"
    tools:context="com.oymj.restaurantorderapp.sessiondetected">

    <ImageView
        android:id="@+id/loadscreen"
        android:layout_width="293dp"
        android:layout_height="222dp"
        android:scaleType="fitXY"
        android:background="@drawable/loadingscreenanim"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.742"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toBottomOf="@+id/sessiondetect" />

    <TextView
        android:id="@+id/sessiondetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session detected!"
        android:textSize="30dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintHorizontal_bias="0.504" />
</android.support.constraint.ConstraintLayout>
