<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_employeehomepage"
    tools:context="com.oymj.restaurantorderapp.employeefragment.employeetablefoodordered"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@drawable/ordertopbackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">

        <TextView
            android:id="@+id/employee_toppagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Order List"
            android:fontFamily="serif"
            android:textSize="50px"
            android:textColor="#35637c"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/employee_toptitle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/employee_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="serif"
            android:text="EMPLOYEE"
            android:textColor="#467fa5"
            android:textSize="90px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />



    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/ic_order"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/currentorderlistword"
        android:layout_width="480px"
        android:layout_height="wrap_content"
        android:text="Current Order List"
        android:textSize="60px"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginRight="57dp"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="315dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/currentorderlistword"
        android:id="@+id/view8" />


    <TextView
        android:id="@+id/tablefoodorderedtableno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table 20"
        android:textColor="#ffffff"
        android:textSize="70px"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/currentorderlistword"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="70dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="356dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="200dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8">

        <ListView
            android:id="@+id/tablefoodorderedlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <View
        android:layout_width="315dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view9"
        app:layout_constraintHorizontal_bias="0.517" />


    <ImageButton
        android:id="@+id/tabledonebutton"
        android:layout_width="257px"
        android:layout_height="167px"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_orderdone"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/view9" />


</android.support.constraint.ConstraintLayout>
