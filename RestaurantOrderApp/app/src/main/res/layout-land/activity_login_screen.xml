<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreenbackground"

    tools:context="com.oymj.restaurantorderapp.LoginScreen"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/pwtext"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="Password: "
        android:textSize="20sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/usertext"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/usertext" />

    <TextView
        android:id="@+id/usertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:textSize="20sp"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toLeftOf="@+id/password"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginRight="17dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="249dp"
        android:layout_height="51dp"
        android:ems="10"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/inputbackground"
        android:textColor="#ffffff"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/password"
        android:layout_marginEnd="147dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="147dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:ems="10"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:background="@drawable/inputbackground"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/pwtext"
        app:layout_constraintRight_toRightOf="@+id/username"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/username"
        app:layout_constraintTop_toTopOf="@+id/pwtext" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="162dp"
        android:layout_height="123dp"
        app:srcCompat="@drawable/foodmonster"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="198dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="196dp"
        android:layout_marginRight="198dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/slogan"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/registerbutton"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="@+id/registerbutton"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="26dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/loginbutton"
        android:layout_width="0dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/login"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/registerbutton"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/registerbutton" />

    <ImageButton
        android:id="@+id/registerbutton"
        android:layout_width="0dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/register"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/loginbutton"
        android:layout_marginStart="35dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="22dp"
        app:layout_constraintLeft_toRightOf="@+id/username"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
